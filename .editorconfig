# https://editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{py,json,yml,md}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

